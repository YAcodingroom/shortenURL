<div class='card mb-3 success-card border-light-subtle py-4'>
	<div class='row g-0'>
		<div class='col-sm-6 card-body-qrcode'>
			<img
				src='{{qrCodeImagePath}}'
				class='img-fluid rounded-start'
				alt='qrcode'
				id='qrcode'
			/>
		</div>
		<div class='col-sm-6'>
			<div class='card-body card-body-url text-start'>
				<h5 class='card-title text-info'>Here is your shorten URL</h5>
				<p class='card-text text-danger-emphasis my-4'>{{shortenerUrl}}</p>
				<p class='card-text'><small
						class='text-body-secondary'
					>{{longerUrl}}</small></p>
			</div>
		</div>
	</div>
</div>